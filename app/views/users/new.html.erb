<div class="intro_box">
  <h1 align='center'>Umagram</h1>
  <h3 align='center'>Sign Up</h3>
  <form action="<%= users_url %>" method="post" enctype="multipart/form-data">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    First Name <input type="text" name="user[firstname]" value="<%= @user.firstname %>"><br>
    Username <input type="text" name="user[username]" value="<%= @user.username %>"><br>
    Email <input type="text" name="user[email]" value="<%= @user.email %>"><br>
    Password <input type="password" name="user[password]"><br>
    Repeat Password <input type="password" name="user[password]"><br>
    Profile Picture<input type="file" name="user[avatar]"><br>
  <h3 align="center"><input type="submit" name="" value="Sign Up" class="button">
  </form>
  <br>OR <br><a href="<%= new_session_url %>" style="background-color:#3498db">Sign In</a></h3>
</div>

<%= video_tag "NY.mp4", autoplay: :autoplay, loop: :loop, mute: :mute, class: "video" %>
